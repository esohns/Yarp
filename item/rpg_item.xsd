  </xsd:simpleType>
  
  <xsd:complexType name="RPG_Item_Store_Price_Type">
    <xsd:sequence>
      <xsd:element name="numGoldPieces" type="xsd:unsignedInt" minOccurs="1" maxOccurs="1"/>
      <xsd:element name="numSilverPieces" type="xsd:unsignedInt" minOccurs="1" maxOccurs="1"/>
    </xsd:sequence>
  </xsd:complexType>

  <xsd:simpleType name="RPG_Chance_Dice_Type">
    <xsd:restriction base="xsd:string">
      <xsd:enumeration value="D_2"/>
      <xsd:enumeration value="D_3"/>
      <xsd:enumeration value="D_4"/>
      <xsd:enumeration value="D_6"/>
      <xsd:enumeration value="D_8"/>
      <xsd:enumeration value="D_10"/>
      <xsd:enumeration value="D_12"/>
      <xsd:enumeration value="D_20"/>
      <xsd:enumeration value="D_100"/>
    </xsd:restriction>
  </xsd:simpleType>

  <xsd:complexType name="RPG_Chance_Roll_Type">
    <xsd:sequence>
      <xsd:element name="numDice" type="xsd:unsignedInt" minOccurs="1" maxOccurs="1"/>
      <xsd:element name="typeDice" type="RPG_Chance_Dice_Type" minOccurs="1" maxOccurs="1"/>
      <xsd:element name="modifier" type="xsd:integer" minOccurs="1" maxOccurs="1"/>
    </xsd:sequence>
  </xsd:complexType>

