      <xsd:enumeration value="CRITICALHIT_MODIFIER_18_20_X2"/>
    </xsd:restriction>
  </xsd:simpleType>
  
  <xsd:simpleType name="RPG_Item_Damage_Type">
    <xsd:restriction base="xsd:string">
      <xsd:enumeration value="WEAPON_DAMAGE_BLUDGEONING"/>
      <xsd:enumeration value="WEAPON_DAMAGE_PIERCING"/>
      <xsd:enumeration value="WEAPON_DAMAGE_SLASHING"/>
    </xsd:restriction>
  </xsd:simpleType>
  
  <xsd:complexType name="RPG_Item_Weapon_Properties_Type">
    <xsd:sequence>
      <xsd:element name="weaponType" type="RPG_Item_Weapon_Type" minOccurs="1" maxOccurs="1"/>
      <xsd:element name="weaponCategory" type="RPG_Item_Weapon_Category_Type" minOccurs="1" maxOccurs="1"/>
      <xsd:element name="weaponClass" type="RPG_Item_Weapon_Class_Type" minOccurs="1" maxOccurs="1"/>
      <xsd:element name="baseStorePrice" type="RPG_Item_Store_Price_Type" minOccurs="1" maxOccurs="1"/>
      <xsd:element name="baseDamage" type="RPG_Chance_Roll_Type" minOccurs="1" maxOccurs="1"/>
      <xsd:element name="criticalHitModifier" type="RPG_Item_CriticalHit_Modifier_Type" minOccurs="1" maxOccurs="1"/>
      <xsd:element name="rangeIncrement" type="xsd:unsignedInt" minOccurs="1" maxOccurs="1"/>
      <xsd:element name="baseWeight" type="xsd:unsignedInt" minOccurs="1" maxOccurs="1"/>
      <xsd:element name="typeOfDamage" type="RPG_Item_Damage_Type" minOccurs="1" maxOccurs="1"/>
    </xsd:sequence>
  </xsd:complexType>

  <xsd:simpleType name="RPG_Item_Armor_Category_Type">
    <xsd:restriction base="xsd:string">
      <xsd:enumeration value="ARMOR_CATEGORY_LIGHT"/>
