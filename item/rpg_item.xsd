      <xsd:enumeration value="ARMOR_PADDED"/>
      <xsd:enumeration value="ARMOR_LEATHER"/>
      <xsd:enumeration value="ARMOR_LEATHER_STUDDED"/>
      <xsd:enumeration value="ARMOR_CHAIN_SHIRT"/>
      <xsd:enumeration value="ARMOR_HIDE"/>
      <xsd:enumeration value="ARMOR_MAIL_SCALE"/>
      <xsd:enumeration value="ARMOR_MAIL_CHAIN"/>
      <xsd:enumeration value="ARMOR_PLATE_BREAST"/>
      <xsd:enumeration value="ARMOR_MAIL_SPLINT"/>
      <xsd:enumeration value="ARMOR_MAIL_BANDED"/>
      <xsd:enumeration value="ARMOR_PLATE_HALF"/>
      <xsd:enumeration value="ARMOR_PLATE_FULL"/>
      <xsd:enumeration value="ARMOR_BUCKLER"/>
      <xsd:enumeration value="ARMOR_SHIELD_LIGHT_WOODEN"/>
      <xsd:enumeration value="ARMOR_SHIELD_LIGHT_STEEL"/>
      <xsd:enumeration value="ARMOR_SHIELD_HEAVY_WOODEN"/>
      <xsd:enumeration value="ARMOR_SHIELD_HEAVY_STEEL"/>
      <xsd:enumeration value="ARMOR_SHIELD_TOWER"/>
    </xsd:restriction>
  </xsd:simpleType>

  <xsd:complexType name="RPG_Item_Armor_Properties_Type">
    <xsd:sequence>
      <xsd:element name="armorType" type="RPG_Item_Armor_Type" minOccurs="1" maxOccurs="1"/>
      <xsd:element name="armorCategory" type="RPG_Item_Armor_Category_Type" minOccurs="1" maxOccurs="1"/>
      <xsd:element name="baseStorePrice" type="RPG_Item_Store_Price_Type" minOccurs="1" maxOccurs="1"/>
      <xsd:element name="baseArmorBonus" type="xsd:unsignedInt" minOccurs="1" maxOccurs="1"/>
      <xsd:element name="maxDexterityBonus" type="xsd:unsignedInt" minOccurs="1" maxOccurs="1"/>
      <xsd:element name="armorCheckPenalty" type="xsd:integer" minOccurs="1" maxOccurs="1"/>
      <xsd:element name="arcaneSpellFailure" type="xsd:unsignedInt" minOccurs="1" maxOccurs="1"/>
      <xsd:element name="baseSpeed" type="xsd:unsignedInt" minOccurs="1" maxOccurs="1"/>
      <xsd:element name="baseWeight" type="xsd:unsignedInt" minOccurs="1" maxOccurs="1"/>
    </xsd:sequence>
  </xsd:complexType>
</xsd:schema>
