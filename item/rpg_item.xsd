      <xsd:enumeration value="ARMOR_CATEGORY_HEAVY"/>
      <xsd:enumeration value="ARMOR_CATEGORY_SHIELD"/>
    </xsd:restriction>
  </xsd:simpleType>

  <xsd:simpleType name="RPG_Item_Armor_Type">
