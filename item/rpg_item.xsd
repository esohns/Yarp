<?xml version="1.0" encoding="UTF-8"?>
<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema">

  <xsd:annotation>
    <xsd:documentation xml:lang="en">
      RPG_Item types XML schema
    </xsd:documentation>
  </xsd:annotation>

<!-- xml document will contain a dictionary of different types of items -->
  <xsd:element name="RPG_Item_Dictionary" type="RPG_Item_Dictionary_Type"/>

  <xsd:complexType name="RPG_Item_Dictionary_Type">
    <xsd:sequence>
      <xsd:element name="RPG_Item_Weapon_Dictionary" type="RPG_Item_Weapon_Dictionary_Type" minOccurs="1" maxOccurs="1"/>
      <xsd:element name="RPG_Item_Armor_Dictionary" type="RPG_Item_Armor_Dictionary_Type" minOccurs="1" maxOccurs="1"/>
    </xsd:sequence>
  </xsd:complexType>

  <xsd:complexType name="RPG_Item_Weapon_Dictionary_Type">
    <xsd:sequence>
      <xsd:element name="weapon" type="RPG_Item_Weapon_Properties_Type" maxOccurs="unbounded"/>
    </xsd:sequence>
  </xsd:complexType>

  <xsd:complexType name="RPG_Item_Armor_Dictionary_Type">
    <xsd:sequence>
      <xsd:element name="armor" type="RPG_Item_Armor_Properties_Type" maxOccurs="unbounded"/>
    </xsd:sequence>
  </xsd:complexType>

  <xsd:simpleType name="RPG_Item_Weapon_Category_Type">
    <xsd:restriction base="xsd:string">
      <xsd:enumeration value="WEAPON_CATEGORY_SIMPLE"/>
      <xsd:enumeration value="WEAPON_CATEGORY_MARTIAL"/>
      <xsd:enumeration value="WEAPON_CATEGORY_EXOTIC"/>
    </xsd:restriction>
  </xsd:simpleType>

  <xsd:simpleType name="RPG_Item_Weapon_Class_Type">
    <xsd:restriction base="xsd:string">
      <xsd:enumeration value="WEAPON_CLASS_UNARMED"/>
      <xsd:enumeration value="WEAPON_CLASS_LIGHT_MELEE"/>
      <xsd:enumeration value="WEAPON_CLASS_ONE_HANDED_MELEE"/>
      <xsd:enumeration value="WEAPON_CLASS_TWO_HANDED_MELEE"/>
      <xsd:enumeration value="WEAPON_CLASS_RANGED"/>
    </xsd:restriction>
  </xsd:simpleType>

