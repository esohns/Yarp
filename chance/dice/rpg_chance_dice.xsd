  <xsd:complexType name="RPG_Chance_DiceRoll_Type">
    <xsd:sequence>
      <xsd:element name="numDice" type="xsd:unsignedInt" minOccurs="1" maxOccurs="1"/>
      <xsd:element name="typeDice" type="RPG_Chance_DiceType_Type" minOccurs="1" maxOccurs="1"/>
      <xsd:element name="modifier" type="xsd:integer" minOccurs="1" maxOccurs="1"/>
    </xsd:sequence>
  </xsd:complexType>

  <xsd:complexType name="RPG_Chance_ValueRange_Type">
    <xsd:sequence>
      <xsd:element name="begin" type="xsd:integer" minOccurs="1" maxOccurs="1"/>
      <xsd:element name="end" type="xsd:integer" minOccurs="1" maxOccurs="1"/>
    </xsd:sequence>
  </xsd:complexType>

</xsd:schema>
